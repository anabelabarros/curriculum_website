<!-- app/views/pages/contact.html.erb -->
<h1>Contact Us</h1>

<%= form_with url: contact_path, method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :message %>
    <%= text_area_tag :message %>
  </div>
  <div>
    <%= submit_tag 'Send' %>
  </div>
<% end %>
